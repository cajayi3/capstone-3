{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                 
    "moduleResolution": "Node",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,  
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,                          
    "noEmit": true
  },
  "ts-node": {
    "esm": true
  }
}
