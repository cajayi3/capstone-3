{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                 
    "moduleResolution": "Node",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,  
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,                          
    "noEmit": true
  },
  "include": [
    "main.ts",
    "config/**/*",
    "controller/**/*",
    "db/**/*",
    "routes/**/*",
    "services/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true
  }
}
